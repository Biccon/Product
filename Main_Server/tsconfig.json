{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": false,
        "noImplicitAny": true,
        "allowJs": true,
        "sourceMap": true,
        "removeComments": true,
        "outDir": "./dist",
        "allowSyntheticDefaultImports": true,
        "rootDir": "."
    },
    "exclude": ["node_modules", "test", "dist", "Common", "**/*.e2e.ts", "views"],
    "include": ["API", "src"]
}
